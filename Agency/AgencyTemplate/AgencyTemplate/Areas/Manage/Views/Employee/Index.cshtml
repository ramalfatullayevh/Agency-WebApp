
@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<Employee>
    <div class="col-md-9 stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-title">Employee</p>
            <td><a class="btn btn-success" asp-area="Manage" asp-controller="Employee" asp-action="Create">Create +</a></td>
                <div class="table-responsive">
                    <table id="recent-purchases-listing" class="table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Position</th>
                                <th>Salary</th>
                                <th>Twitter</th>
                                <th>Facebook</th>
                                <th>Linkedn</th>
                                <th>Delete</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                        {
                            <tr>
                                <td><img src="~/assets/img/team/@item.ImageUrl" /></td>
                                <td>@item.Name</td>
                                <td>@item.Position.Name</td>
                                <td>@item.Salary</td>
                                <td>@item.Twitter</td>
                                <td>@item.Facebook</td>
                                <td>@item.Linkedn</td>
                                <td><a class="btn btn-danger" asp-area="Manage" asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                                <td><a class="btn btn-info" asp-area="Manage" asp-controller="Employee" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                                
                            </tr>
                            
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


